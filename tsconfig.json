{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./custom-types"],
    "moduleResolution": "node",  // Specify the module resolution strategy
    "allowSyntheticDefaultImports": true,
    "types": ["jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
    // If using Node.js and you want to enable experimental decorators:
    // "experimentalDecorators": true,

    // If using JSX (React, for example):
    // "jsx": "react",
  },
  "include": [
    "src/**/*.ts",
    "custom.d.ts"
  ],
  "exclude": ["node_modules"]
}
